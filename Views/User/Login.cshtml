@model ELearnApplication.Models.UserAccount
@{ 
    ViewData["Title"] = "Login";
}

    <div>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <header class="card-header">

                        <h4 class="card-title mt-2">Login</h4>
                    </header>
                    <article class="card-body">
                        @if (ViewBag.Message != null)
                        {
                            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                                <strong>@ViewBag.Message</strong>
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }
                        <form asp-action="Login">
                            <div class="form-group">
                                <label asp-for="Username" class="control-label">Username</label>
                                <input asp-for="Username" type="text" class="form-control" />
                                <span asp-validation-for="Username" class="text-danger">@ViewBag.UserNameError</span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password" class="control-label">Password</label>
                                <input asp-for="Password" type="password" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger">@ViewBag.PassError</span>
                            </div><br />
                            <div class="form-group">
                                <input type="submit" value="Login" class="btn btn-primary" />
                            </div>
                        </form>
                    </article>
                    <div class="border-top card-body text-center">Do You New User? <a asp-controller="User" asp-action="Register">Register</a></div>
                </div>
            </div>
        </div>
    </div>