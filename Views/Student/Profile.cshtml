@model ELearnApplication.Models.UserAccount
@{ 
    ViewData["Title"] = "Profile";
}
<style>
    .container1 {
        position: relative;
    }
    .image {
        display: block;
        width: 100%;
        height: auto;
    }
    .overlay {
        position: absolute;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        height: 100%;
        width: 100%;
        opacity: 0;
        transition: .5s ease;
        background-color: #008CBA;
    }
    .container1:hover .overlay {
        opacity: 0.7;
    }
    .text {
        color: white;
        font-size: 20px;
        position: absolute;
        top: 50%;
        left: 50%;
        -webkit-transform: translate(-50%, -50%);
        -ms-transform: translate(-50%, -50%);
        transform: translate(-50%, -50%);
        text-align: center;
    }
</style>
<div class="row justify-content-center">
    <div class="card text-center" style="width: 18rem;">
        <div class="container1">
            <img src=~/images/@ViewBag.Users.UserImage class="card-img-top image" alt="...">   
            <div class="overlay">
                <div class="text"><button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">Edit</button></div>
            </div>
        </div>
        
        <div class="card-body">
            <h5 class="card-title">@ViewBag.Users.FirstName @ViewBag.Users.LastName</h5>
            <p class="card-text"></p>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Email : @ViewBag.Users.Email</li>
            <li class="list-group-item">Mobile Number : @ViewBag.Users.Phone</li>
        </ul>
        <div class="card-body">
            <a asp-controller="Student" asp-action="EditUser" class="btn btn-primary">Edit</a>
        </div>
    </div>
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Change Profile Image</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form asp-action="EditImage">
                    <div class="modal-body">
                        <div class="form-group">
                            <label asp-for="UserImage" class="col-form-label">Choose Image</label>
                            <input asp-for="UserImage" type="file" class="form-control">
                            <span asp-validation-for="UserImage" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <div class="form-group">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Save changes</button>
                        </div>
                    </div>
                </form>    
            </div>
        </div>
    </div>
</div>

